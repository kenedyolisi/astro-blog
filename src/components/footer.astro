---
import Social from "@components/social.astro";

const socialPlatforms = ["github", "twitter", "facebook"];
---

<style>
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
</style>

<footer>
  {
    socialPlatforms.map((platform) => {
      return <Social platform={platform} />;
    })
  }
</footer>
