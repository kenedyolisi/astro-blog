---
import "@styles/global.scss";

import BaseLayout from "@layouts/base.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Kenedy",
  lastName: "Olisi",
  country: "Kenya",
  occupation: "Frontend Developer",
  hobbies: [
    "Watching movies",
    "Listening to music",
    "Playing checkers",
    "Gardening",
    "Cycling",
  ],
};

const skills = [
  "HTML",
  "CSS (SCSS)",
  "Bootstrap",
  "JavaScript (TypeScript)",
  "React",
  "Astro",
];

const [happy, finished, goal] = [true, false, 3];
---

<BaseLayout pageTitle={pageTitle}>
  <h1>{pageTitle}</h1>

  <p>Here are a few facts about me:</p>

  <p>My name is {identity.firstName} {identity.lastName}.</p>
  <p>
    I live in {identity.country} and I work as a {identity.occupation}.
  </p>

  <p>
    My hobbies include: <ul>
      {
        identity.hobbies.map((hobby, index) => {
          return (
            <li>
              {index === identity.hobbies.length - 2 ? hobby + " and" : hobby}
            </li>
          );
        })
      }
    </ul>
  </p>

  <p id="skills">My skills are:</p>
  <ul aria-describedby="skills">
    {
      skills.map((skill) => {
        return <li class="skill">{skill}</li>;
      })
    }
  </ul>
  {happy && <p>I am Delighted to be learning Astro.</p>}

  {finished && <p>I have finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not three days.</p>
    )
  }

  <script>
    import "@scripts/menu";
  </script>
</BaseLayout>
